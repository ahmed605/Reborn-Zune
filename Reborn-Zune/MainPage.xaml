                        Text="&#xF139;" />
                </PivotItem.Header>
                <Grid>
                    <controls:Carousel
                        x:Name="CarouselControl"
                        InvertPositive="True"
                        ItemDepth="157"
                        ItemMargin="-64"
                        ItemRotationX="0"
                        ItemRotationY="0"
                        ItemRotationZ="0"
                        Orientation="Horizontal">
                        <controls:Carousel.EasingFunction>
                            <CubicEase EasingMode="EaseOut" />
                        </controls:Carousel.EasingFunction>
