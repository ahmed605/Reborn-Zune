                                </controls:DropShadowPanel>
                            </DataTemplate>
                        </controls:Carousel.ItemTemplate>
                    </controls:Carousel>
                </Grid>
            </PivotItem>-->
            <PivotItem>
                <PivotItem.Header>
                    <TextBlock
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="55"
                        Text="&#xE73B;" />
                </PivotItem.Header>
                <controls:DockPanel HorizontalAlignment="Stretch">
                    <Grid Margin="0,25,0,0" controls:DockPanel.Dock="Top"
                          HorizontalAlignment="Stretch">
                        
                        <StackPanel HorizontalAlignment="Center" 
                                    Orientation="Horizontal">
                            <Button
                                x:Name="ShuffleAllButton"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Tapped="ShuffleAllButton_Tapped">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,2,0,0"
                                            VerticalAlignment="Center"
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="16"
                                            Text="&#xE8B1;" />
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            Text="Shuffle all" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <StackPanel Margin="50,0,0,0" Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="Sorted By: " />
                                <ComboBox
                                    Width="43"
                                    VerticalAlignment="Center"
                                    SelectedValue="A-Z"
                                    SelectionChanged="ComboBox_SelectionChanged"
                                    Style="{StaticResource ComboBoxStyle}">
                                    <x:String>A-Z</x:String>
                                    <x:String>Z-A</x:String>
                                    <x:String>Artist</x:String>
                                </ComboBox>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <GridView
                        x:Name="albums"
                        Margin="0,15,0,70"
                        Padding="0,10,0,0"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Top"
                        HorizontalContentAlignment="Center"
                        controls:DockPanel.Dock="Top"
                        ChoosingItemContainer="GridView_ChoosingItemContainer"
                        ItemContainerStyle="{StaticResource AlbumGridViewItemStyle}"
                        ItemsSource="{x:Bind MainVM.LibraryViewModel.Albums, Mode=OneWay}"
                        Loaded="Albums_Loaded"
                        SelectionMode="Single">

                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid
                                    HorizontalAlignment="Center"
                                    MaximumRowsOrColumns="4"
                                    Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="model:LocalAlbumModel">
                                <controls:DockPanel>
                                    <StackPanel
                                        x:Name="TitleAndName"
                                        Width="175"
                                        HorizontalAlignment="Left"
                                        controls:DockPanel.Dock="Bottom"
                                        Orientation="Vertical">
                                        <TextBlock
                                            Margin="0,5,0,0"
                                            FontFamily="Source Han Sans CN"
                                            FontSize="18"
                                            FontWeight="Normal"
                                            Foreground="Black"
                                            Text="{x:Bind Title, Mode=OneWay}" />
                                        <StackPanel Margin="0,-3,0,0" Orientation="Horizontal">
                                            <TextBlock
                                                VerticalAlignment="Center"
                                                FontFamily="Source Han Sans CN"
                                                FontSize="15"
                                                FontWeight="Normal"
                                                Foreground="Gray"
                                                Text="{x:Bind AlbumArtist, Mode=OneWay}" />
                                            <TextBlock
                                                Margin="3,0,0,0"
                                                VerticalAlignment="Center"
                                                FontFamily="Source Han Sans CN"
                                                FontSize="15"
                                                FontWeight="Normal"
                                                Foreground="Gray"
                                                Text="{x:Bind Year, Mode=OneWay}" />
                                        </StackPanel>

                                    </StackPanel>

                                    <Grid
                                        Width="175"
                                        Height="175"
                                        controls:DockPanel.Dock="Top">
                                        <controls:DropShadowPanel
                                            HorizontalContentAlignment="Stretch"
                                            VerticalContentAlignment="Stretch"
                                            extensions:VisualExtensions.Opacity="0"
                                            BlurRadius="20"
                                            ShadowOpacity="0.4"
                                            Visibility="Collapsed">
                                            <Border />
                                        </controls:DropShadowPanel>
                                        <controls:ImageEx
                                            x:Name="Thumbnail"
                                            PlaceholderSource="ms-appx:///Assets/Vap-logo-placeholder.jpg"
                                            Source="{x:Bind Image, Mode=OneWay}"
                                            Stretch="Fill" />

                                        <control:ShadowSpotLightControl
                                            Width="175"
                                            Height="175"
                                            extensions:VisualExtensions.Opacity="0"
                                            Visibility="Collapsed" />
                                        <Border
                                            x:Name="border"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            extensions:VisualExtensions.Opacity="0"
                                            BorderBrush="Black"
                                            BorderThickness="1"
                                            Visibility="Collapsed" />
                                        <StackPanel
                                            x:Name="Buttons"
                                            Margin="0,0,0,5"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            extensions:VisualExtensions.Opacity="0"
                                            Orientation="Horizontal"
                                            Visibility="Collapsed">
                                            <Button
                                                Width="25"
                                                Height="25"
                                                Style="{StaticResource MainPageCircleButtonStyle}"
                                                Tapped="PlayButton_Tapped">
                                                <Button.Content>
                                                    <TextBlock
                                                        FontFamily="Segoe MDL2 Assets"
                                                        FontWeight="Bold"
                                                        Text="&#xE768;" />
                                                </Button.Content>
                                            </Button>
                                            <Button
                                                x:Name="AlbumAddTo"
                                                Width="25"
                                                Height="25"
                                                Margin="10,0,0,0"
                                                Style="{StaticResource MainPageCircleButtonStyle}"
                                                Tapped="AddToButton_Tapped">
                                                <Button.Flyout>
                                                    <Flyout utils:BindableFlyout.ItemsSource="{x:Bind LibraryViewModel.Playlists, Mode=OneWay}">
                                                        <utils:BindableFlyout.ItemTemplate>
                                                            <DataTemplate x:DataType="model:LocalPlaylistModel">
                                                                <MenuFlyoutItem
                                                                    x:Name="AddToPlaylistFlyout"
                                                                    Tapped="AddToPlaylistFlyout_Tapped"
                                                                    Text="{x:Bind Playlist.Playlist.Name, Mode=OneWay}" />
                                                            </DataTemplate>
                                                        </utils:BindableFlyout.ItemTemplate>
                                                    </Flyout>
                                                </Button.Flyout>
                                                <Button.Content>
                                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" />
                                                </Button.Content>
                                            </Button>
                                        </StackPanel>
                                    </Grid>

                                </controls:DockPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </controls:DockPanel>
            </PivotItem>
            <PivotItem>
                <PivotItem.Header>
                    <TextBlock
                        FontFamily="Segoe MDL2 Assets"
                        FontSize="55"
                        Text="&#xF136;" />
                </PivotItem.Header>
                <controls:DockPanel>
                    <StackPanel
                        Margin="0,60,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        controls:DockPanel.Dock="Top"
                        Orientation="Vertical"
                        Visibility="{x:Bind MainVM.LibraryViewModel.hasPlaylist, Mode=OneWay}">
                        <TextBlock
                            FontSize="40"
                            HorizontalTextAlignment="Left"
                            Text="YOU HAVE NO PLAYLIST IN&#x0a;YOUR COLLECTION" />
                        <Button
                            x:Name="CreatePlaylistButton"
                            Margin="0,15,0,0"
                            Background="Transparent"
                            Content="new playlist">
                            <Button.Flyout>
                                <Flyout x:Name="AddPlaylistFlyout">
                                    <StackPanel>
                                        <TextBlock Text="new playlist" />
                                        <TextBox x:Name="PlaylistName" Margin="0,10,0,0" />
                                        <TextBlock
                                            x:Name="UnAvailableHint"
                                            Margin="0,10,0,0"
                                            Text="Already have playlist with this name"
                                            Visibility="Collapsed" />
                                        <Button
                                            x:Name="newPlaylistButton"
                                            Margin="0,10,0,0"
                                            Click="NewPlaylistButton_Click"
                                            Content="Create" />
                                    </StackPanel>
                                </Flyout>
                            </Button.Flyout>

                        </Button>
                    </StackPanel>
                    <Grid
                        Margin="20,25,0,0"
                        controls:DockPanel.Dock="Top"
                        Visibility="{x:Bind MainVM.LibraryViewModel.hasPlaylistReverse, Mode=OneWay}">
                        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                            <Button
                                x:Name="ShuffleAllPlaylistButton"
                                Background="Transparent"
                                BorderBrush="Transparent"
                                Tapped="ShuffleAllPlaylistButton_Tapped">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,2,0,0"
                                            VerticalAlignment="Center"
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="16"
                                            Text="&#xE8B1;" />
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            Text="Shuffle all" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                            <StackPanel Margin="50,0,0,0" Orientation="Horizontal">
                                <TextBlock VerticalAlignment="Center" Text="Sorted By: " />
                                <ComboBox
                                    x:Name="ComboBox2"
                                    Width="80"
                                    HorizontalAlignment="Left"
                                    VerticalAlignment="Center"
                                    Foreground="Blue"
                                    SelectedValue="A-Z"
                                    SelectionChanged="ComboBox2_SelectionChanged"
                                    Style="{StaticResource ComboBoxStyle}">
                                    <x:String>A-Z</x:String>
                                    <x:String>Z-A</x:String>
                                </ComboBox>
                            </StackPanel>
                            <Button
                                x:Name="NewPlaylistButton"
                                Margin="10,0,0,0"
                                Background="Transparent"
                                BorderBrush="Transparent">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock
                                            Margin="0,2,0,0"
                                            VerticalAlignment="Center"
                                            FontFamily="Segoe MDL2 Assets"
                                            FontSize="16"
                                            Text="&#xE710;" />
                                        <TextBlock
                                            Margin="10,0,0,0"
                                            VerticalAlignment="Center"
                                            Text="New Playlist" />
                                    </StackPanel>
                                </Button.Content>
                                <Button.Flyout>
                                    <Flyout x:Name="AddPlaylistFlyout2">
                                        <StackPanel>
                                            <TextBlock Text="new playlist" />
                                            <TextBox x:Name="PlaylistName2" Margin="0,10,0,0" />
                                            <TextBlock
                                                x:Name="UnAvailableHint2"
                                                Margin="0,10,0,0"
                                                Text="Already have playlist with this name"
                                                Visibility="Collapsed" />
                                            <Button
                                                x:Name="newPlaylistButton2"
                                                Margin="0,10,0,0"
                                                Content="Create"
                                                Tapped="NewPlaylistButton2_Tapped" />
                                        </StackPanel>
                                    </Flyout>
                                </Button.Flyout>
                            </Button>
                        </StackPanel>
                    </Grid>
                    <GridView
                        x:Name="playlists"
                        MaxWidth="1000"
                        Margin="0,15,0,70"
                        Padding="0,10,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        controls:DockPanel.Dock="Top"
                        ChoosingItemContainer="GridView_ChoosingItemContainer"
                        ItemContainerStyle="{StaticResource AlbumGridViewItemStyle}"
                        ItemsSource="{x:Bind MainVM.LibraryViewModel.Playlists, Mode=OneWay}"
                        Loaded="Playlists_Loaded"
                        Visibility="{x:Bind MainVM.LibraryViewModel.hasPlaylistReverse, Mode=OneWay}">
                        <GridView.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsWrapGrid MaximumRowsOrColumns="4" Orientation="Horizontal" />
                            </ItemsPanelTemplate>
                        </GridView.ItemsPanel>
                        <GridView.ItemTemplate>
                            <DataTemplate x:DataType="model:LocalPlaylistModel">
                                <controls:DockPanel>
                                    <TextBlock
                                        Margin="0,8,0,0"
                                        controls:DockPanel.Dock="Bottom"
                                        FontFamily="Source Han Sans CN"
                                        FontSize="18"
                                        FontWeight="Normal"
                                        Foreground="Black"
                                        Text="{x:Bind Playlist.Playlist.Name, Mode=OneWay}" />
                                    <Grid
                                        Width="175"
                                        Height="175"
                                        controls:DockPanel.Dock="Top"
                                        extensions:VisualExtensions.CenterPoint="87.5,87.5,0">
                                        <controls:DropShadowPanel
                                            HorizontalContentAlignment="Stretch"
                                            VerticalContentAlignment="Stretch"
                                            extensions:VisualExtensions.Opacity="0"
                                            BlurRadius="20"
                                            ShadowOpacity="0.4"
                                            Visibility="Collapsed">
                                            <Border />
                                        </controls:DropShadowPanel>
                                        <controls:ImageEx
                                            x:Name="Thumbnail"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            Source="ms-appx:///Assets/Vap-logo-placeholder.jpg"
                                            Stretch="UniformToFill" />

                                        <control:ShadowSpotLightControl
                                            Width="175"
                                            Height="175"
                                            extensions:VisualExtensions.Opacity="0"
                                            Visibility="Collapsed" />
                                        <Border
                                            x:Name="border"
                                            HorizontalAlignment="Stretch"
                                            VerticalAlignment="Stretch"
                                            extensions:VisualExtensions.Opacity="0"
                                            BorderBrush="Black"
                                            BorderThickness="1"
                                            Visibility="Collapsed" />
                                        <StackPanel
                                            x:Name="Buttons"
                                            Margin="0,0,0,5"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Bottom"
                                            extensions:VisualExtensions.Opacity="0"
                                            Orientation="Horizontal"
                                            Visibility="Collapsed">
                                            <Button
                                                Width="25"
                                                Height="25"
                                                Style="{StaticResource MainPageCircleButtonStyle}"
                                                Tapped="PlayButton_Tapped">
                                                <Button.Content>
                                                    <TextBlock
                                                        FontFamily="Segoe MDL2 Assets"
                                                        FontWeight="Bold"
                                                        Text="&#xE768;" />
                                                </Button.Content>
                                            </Button>
                                            <Button
                                                x:Name="PlaylistAddTo"
                                                Width="25"
                                                Height="25"
                                                Margin="10,0,0,0"
                                                Style="{StaticResource MainPageCircleButtonStyle}"
                                                Tapped="PlaylistAddTo_Tapped">
                                                <Button.Flyout>
                                                    <Flyout utils:BindableFlyout.ItemsSource="{x:Bind LibraryViewModel.Playlists, Mode=OneWay}">
                                                        <utils:BindableFlyout.ItemTemplate>
                                                            <DataTemplate x:DataType="model:LocalPlaylistModel">
                                                                <MenuFlyoutItem
                                                                    x:Name="AddToPlaylistFlyout"
                                                                    Tapped="AddToPlaylistFlyout_Tapped"
                                                                    Text="{x:Bind Playlist.Playlist.Name, Mode=OneWay}" />
                                                            </DataTemplate>
                                                        </utils:BindableFlyout.ItemTemplate>
                                                    </Flyout>
                                                </Button.Flyout>
                                                <Button.Content>
                                                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" />
                                                </Button.Content>
                                            </Button>
                                        </StackPanel>
                                    </Grid>


                                </controls:DockPanel>
                            </DataTemplate>
                        </GridView.ItemTemplate>
                    </GridView>
                </controls:DockPanel>
            </PivotItem>
        </Pivot>

        <Grid
            x:Name="PlayerFloating"
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="1"
            Width="100"
            Height="100"
            Margin="0,0,50,50"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            extensions:VisualExtensions.CenterPoint="50,50,0"
            Tapped="PlayerFloating_Tapped"
            Visibility="{x:Bind MainVM.FloatingVisible, Mode=OneWay}">
            <controls:DropShadowPanel
                HorizontalContentAlignment="Stretch"
                VerticalContentAlignment="Stretch"
                BlurRadius="60"
                OffsetY="5"
                ShadowOpacity="0.3">
                <Border />
            </controls:DropShadowPanel>
            <Image x:Name="CurrentPlayingThumbnailPlaceHolder" Source="ms-appx:///Assets/Vap-logo-placeholder.jpg" />
            <Image x:Name="CurrentPlayingThumbnail" Source="{x:Bind MainVM.PlayerViewModel.MediaList.CurrentItem.PreviewImage, Mode=OneWay}" />
        </Grid>
    </Grid>
</Page>
